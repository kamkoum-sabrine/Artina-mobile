<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextSpectacleTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- Dialog Themes -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
    </style>

    <!-- Bottom Sheet Styles -->
    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
    </style>

    <style name="BottomSheetShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <!-- Color Definitions -->
    <color name="artina_primary">#E50914</color>
    <color name="artina_dark_bg">#000000</color>
    <color name="artina_secondary_bg">#000000</color>
    <color name="artina_text_secondary">#FFFFFF</color>

    <!-- Button Styles -->
    <style name="ArtinaButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/artina_primary</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArtinaButtonSecondary" parent="ArtinaButton">
        <item name="backgroundTint">@color/artina_secondary_bg</item>
        <item name="android:textColor">@color/artina_text_secondary</item>
    </style>


    <!-- Styles pour les champs de saisie -->
    <!-- Style amélioré pour les champs de saisie -->
    <style name="ArtinaInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Border Colors -->
        <item name="boxStrokeColor">@color/artina_primary</item>
        <item name="boxStrokeErrorColor">@color/artina_primary</item>

        <!-- Text Colors -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/artina_text_secondary</item>
        <item name="hintTextColor">@color/artina_primary</item>

        <!-- Shape Appearance - NEW CORRECT WAY -->
        <item name="shapeAppearance">@style/ArtinaInputShape</item>
        <item name="shapeAppearanceOverlay">@style/ArtinaInputShape</item>
    </style>

    <style name="ArtinaInputShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <color name="artina_input_stroke">#E50914</color> <!-- Rouge Artina -->
    <color name="artina_input_text">#FFFFFF</color> <!-- Texte blanc -->
    <color name="artina_input_hint">#AAAAAA</color> <!-- Hint gris -->
    <!-- Style pour l'activité -->
    <style name="LoginTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="colorPrimary">@color/artina_primary</item>
    </style>

    <style name="PasswordTextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
</resources>