<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Couleur de fond -->
    <solid android:color="#1E1E1E" /> <!-- Couleur sombre pour l'item -->

    <!-- Bord arrondi -->
    <corners android:radius="8dp" />

    <!-- Bordure -->
    <stroke
        android:width="1dp"
        android:color="#E50914" /> <!-- Couleur Artina rouge -->

    <!-- Ombre (optionnel) -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />
</shape>