<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_artina_dialog"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">
    <!-- Titre -->

    <!-- Bouton Connexion -->
    <Button
        android:id="@+id/btnSeConnecter"
        style="@style/ArtinaButton"
        android:text="Me connecter"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="8dp"/>

    <!-- Bouton Inscription -->
    <Button
        android:id="@+id/btnSInscrire"
        style="@style/ArtinaButtonSecondary"

        android:text="Créer un compte"/>

    <Button
        android:id="@+id/btnContinuerInvite"
        style="@style/ArtinaButtonSecondary"
        android:text="Continuer en invité"
        android:drawableStart="@drawable/ic_guest"
        android:drawablePadding="8dp"/>

    <!-- Séparateur Netflix -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="#333333"/>

    <!-- Texte informatif -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Vous pourrez créer un compte plus tard"
        android:textColor="#757575"
        android:textSize="12sp"/>
</LinearLayout>