<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#121212"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="#1E1E1E"
    app:strokeWidth="1dp">

    <!-- Conteneur principal -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="#121212">

<!-- Image -->
<ImageView
    android:id="@+id/imageSpectacle"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:scaleType="centerCrop"
    android:contentDescription="Affiche du spectacle"
    android:background="#1A1A1A"/>

<!-- Contenu texte -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#0F0F0F">

    <!-- Titre (rouge Netflix) -->
    <TextView
        android:id="@+id/titreSpectacle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.03"/>

    <!-- Ligne Lieu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/location_red"
            app:tint="#E50914"/>

        <TextView
            android:id="@+id/lieuSpectacle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#B3B3B3"
        android:textSize="14sp"/>
    </LinearLayout>

    <!-- Ligne Date/Heure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/calendar_red"
            app:tint="#E50914"/>

        <TextView
            android:id="@+id/dateHeureSpectacle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#B3B3B3"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- SÃ©parateur -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#FBF9F9"/>

    <!-- Prix -->
    <TextView
        android:id="@+id/prixSpectacle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:textColor="#E50914"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>